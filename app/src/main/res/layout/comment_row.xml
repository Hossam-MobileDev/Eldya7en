<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comment_round_back"
    android:layoutDirection="ltr"

    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.elabda3.eldaya7een.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textColor="#BBBCBE"
            android:layout_centerVertical="true"
            android:textSize="10sp"/>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/date_details"
            android:layout_toRightOf="@id/date"
            android:layout_centerVertical="true"
            android:id="@+id/dataImage"
            android:layout_margin="5dp"/>


        <com.elabda3.eldaya7een.MyTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentTitle"
            android:gravity="right"
            android:textColor="#866F55"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/dataImage"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2C2013"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <com.elabda3.eldaya7een.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="right"
        android:id="@+id/commentDetails"
        android:textColor="#C8BBAE"/>

</LinearLayout>