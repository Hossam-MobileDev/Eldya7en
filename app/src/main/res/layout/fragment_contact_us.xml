<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:layoutDirection="ltr"

    tools:context="com.elabda3.eldaya7een.ContactUsPackage.ContactUsFragment">




        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:orientation="vertical"
                >


                <com.elabda3.eldaya7een.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="جاهزون للرد عليك بسرعة \n ينبغي عليك التواصل معانا"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_marginTop="30dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.elabda3.eldaya7een.MyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#816A51"
                        android:layout_marginTop="10dp"
                        />

                <com.elabda3.eldaya7een.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone2"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#816A51"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

                    />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/facebook"
                        android:id="@+id/facebook"
                        android:layout_marginRight="50dp"/>

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/youtube"
                        android:id="@+id/youtube"
                        android:layout_marginLeft="50dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/twitter"
                        android:id="@+id/twitter"
                        android:layout_marginRight="50dp"/>

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/insta"
                        android:id="@+id/insta"
                        android:layout_marginLeft="50dp"/>


                </LinearLayout>

                <com.elabda3.eldaya7een.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/focusbackground"
                    android:hint="اسمك بالكامل"
                    android:id="@+id/fullname"
                    android:textSize="13sp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <com.elabda3.eldaya7een.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/focusbackground"
                    android:hint="بريدك الإلكتروني"
                    android:id="@+id/email"
                    android:textSize="13sp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <com.elabda3.eldaya7een.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    android:background="@drawable/focusbackground"
                    android:hint="ضع استفسارك هنا"
                    android:id="@+id/comment"
                    android:textSize="13sp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

                <com.elabda3.eldaya7een.MyButtonBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="إرسال"
                    android:id="@+id/send"
                    android:layout_margin="10dp"
                    android:background="@drawable/brown_round"
                    android:textColor="#ffffff"
                    />



            </LinearLayout>


    </ScrollView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress"/>


</RelativeLayout>
